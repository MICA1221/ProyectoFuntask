<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FunTask</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FunTask.styles.css" asp-append-version="true" />
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #181818;
            color: #ffffff;
        }

        .navbar {
            background-color: #333333;
        }

        .navbar-brand {
            color: #ffca3a;
            font-family: 'Circular Std Bold', sans-serif;
            font-size: 1.5rem;
            display: flex;
            align-items: center;
        }

            .navbar-brand img {
                width: 30px;
                height: 30px;
                margin-right: 10px;
            }

        .nav-link {
            color: #ffffff;
        }

            .nav-link:hover {
                color: #181818;
            }

        .footer {
            background-color: #ffca3a;
            color: #181818;
        }

        a {
            color: #ffca3a;
        }

            a:hover {
                color: #ffffff;
            }

        .bg-white {
            background-color: #333333 !important;
        }

        .text-dark {
            color: #ffffff !important;
        }

        th {
            color: #ffffff !important;
        }

        td {
            color: #ffffff !important;
        }

        .text-yellow {
            color: #ffca3a !important;
        }

        h1 {
            color: #ffca3a;
        }

        label {
            color: #808080
        }

        .card {
            background-color: #646464; /* #f0f0f0 es un color gris claro */
        }

        .card-bg-lightgray {
            background-color: #f0f0f0; /* #f0f0f0 es un color gris claro */
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-yellow " asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="@Url.Content("~/logo.png")" alt="FunTask Logo">
                    FunTask
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between flex-row-reverse">
                    <partial name="_loginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="SeleccionPerfil" asp-action="Index">Seleccionar Perfil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Hijos" asp-action="Index">Hijos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Actividades" asp-action="Index">Actividades</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Recompensas" asp-action="Index">Recompensas</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - FunTask - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
